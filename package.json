{
  "name": "gamma-timetable-extension",
  "version": "0.0.28",
  "description": "Chrome extension that extracts slide content from Gamma presentations and generates customizable timetables",
  "keywords": [
    "chrome-extension",
    "gamma",
    "presentation",
    "timetable",
    "education"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "BUILD_TARGET=extension vite build",
    "build:extension": "BUILD_TARGET=extension vite build",
    "build:local": "BUILD_TARGET=extension BUILD_ENV=local vite build --outDir dist",
    "build:prod": "BUILD_TARGET=extension BUILD_ENV=production vite build --outDir dist-prod",
    "build:web": "BUILD_TARGET=web vite build",
    "build:shared": "BUILD_TARGET=shared vite build",
    "build:all": "npm run build:extension && npm run build:web && npm run build:shared",
    "preview": "vite preview",
    "package": "npm run build:extension && zip -r ../gamma-plugin-release.zip dist",
    "package:local": "npm run build:local && zip -r ../gamma-plugin-local.zip dist",
    "package:prod": "npm run build:prod && zip -r ../gamma-plugin-production.zip dist-prod",
    "sync-version": "node packages/extension/scripts/sync-version.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run tests/api/presentations.test.js",
    "test:sprint2": "npm run test:api && echo '\nðŸ“‹ Next: Run manual tests with: open tests/manual/sprint2-sync-checklist.md'",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:performance:quick": "k6 run --duration 1m --vus 5 tests/performance/load-test.js",
    "test:manual": "echo 'ðŸ“‹ Manual Testing Checklist:' && echo 'File: tests/manual/sprint2-sync-checklist.md' && echo 'Open with: open tests/manual/sprint2-sync-checklist.md'",
    "test:report": "npm run test:coverage && echo '\nðŸ“Š Test Report Generated. Open coverage/index.html to view detailed results.'",
    "clean": "rm -rf dist dist-web dist-shared dist-types",
    "dev:web": "npm run build:web && npx netlify dev --dir=dist-web",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.1",
    "@playwright/test": "^1.54.2",
    "@types/chrome": "^0.0.326",
    "@types/node": "^24.0.14",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^3.2.4",
    "archiver": "^5.3.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^18.0.1",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@clerk/clerk-js": "^5.81.0",
    "@supabase/supabase-js": "^2.54.0",
    "jspdf": "^3.0.1"
  }
}
