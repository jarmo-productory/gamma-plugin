# Next.js Web App Environment (example)

# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# App URL (used in test-auth-config)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Internal APIs (DO NOT ENABLE IN PRODUCTION)
# When false or unset, all internal/admin endpoints return 404 by default
ENABLE_INTERNAL_APIS=false

# Shared secret for Internal APIs access (set a strong, rotatable value)
INTERNAL_API_TOKEN=

# Optional: allowlist admin emails for /api/admin/* routes (comma-separated)
INTERNAL_ADMIN_EMAILS=

# Optional build metadata
COMMIT_SHA=
# Backend-only service role key (required for device token issuance via RPC)
SUPABASE_SERVICE_ROLE_KEY=
